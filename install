#!/usr/bin/env bash

set -e

CONFIG="install.conf.yaml"
DOTBOT_DIR="dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

KEY_PATH="~/.ssh/id_rsa_github"

ssh-keygen -o -t rsa -f $KEY_PATH
cat ${KEY_PATH}.pub | pbcopy
echo "Public key copied to system register"

echo "Opening browser. Paste key into your GitHub account and save"
python -m webbrowser "https://github.com/settings/ssh/new"

sleep 3
read -p 'Press any key to continue...' continue

cd "${BASEDIR}"
git -C "${DOTBOT_DIR}" submodule sync --quiet --recursive
git submodule update --init --recursive "${DOTBOT_DIR}"

"${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -d "${BASEDIR}" --plugin-dir dotbot-brew -c "${CONFIG}" "${@}"
